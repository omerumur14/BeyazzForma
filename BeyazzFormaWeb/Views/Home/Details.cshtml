@using BeyazzFormaWeb.Entity
@model Product
@{
    ViewBag.Title = "Details";
}
<div class="container my-5">
	<div class="row">
		<div class="col-md-6" style="height:518px;">
			<img src="~/theme/img/@Model.Image" class="img-responsive w-100 h-100">
		</div>
		<div class="col-md-6">
			<div class="row">
				<div class="col-md-12">
					<h1>@Model.Name</h1>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<span class="badge badge-info">Stok Var</span>
					<i class="fas fa-star"></i>
					<i class="fas fa-star"></i>
					<i class="fas fa-star"></i>
					<i class="fas fa-star"></i>
					<i class="fas fa-star-half-alt"></i>
					<span class="badge badge-success">4.5</span>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<div id="description">
						<p>@Model.Description</p>
					</div>
				</div>
			</div>
            <div class="row">
	            <div class="col-md-4 d-flex justify-content-center align-items-center">
		            <h2 id="product-price">@Model.Price TL</h2>
	            </div>
                <div class="col-md-8">
                    <a class="btn" id="ShopierBtn" href="https://www.shopier.com/ShowProductNew/products.php?id=@Model.ShopierId">
                        <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                        Go To Shopier To Buy
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-dark mt-3 mb-0">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">En</th>
                                <th scope="col">Boy</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="bg-primary">
                                <th scope="row">S</th>
                                <td>48</td>
                                <td>65</td>
                            </tr>
                            <tr>
                                <th scope="row">M</th>
                                <td>50</td>
                                <td>67</td>
                            </tr>
                            <tr class="bg-success">
                                <th scope="row">L</th>
                                <td>52</td>
                                <td>69</td>
                            </tr>
                            <tr>
                                <th scope="row">XL</th>
                                <td>54</td>
                                <td>71</td>
                            </tr>
                            <tr class="bg-info">
                                <th scope="row">XXL</th>
                                <td>56</td>
                                <td>73</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
		</div>
	</div>
</div>