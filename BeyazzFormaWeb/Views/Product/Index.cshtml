@model IEnumerable<BeyazzFormaWeb.Entity.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container my-5">

	<h2>Ürün Listesi</h2>
	<hr/>
	<p>
		@Html.ActionLink("Yeni Ürün", "Create", null, new { @class = "btn btn-primary" })
	</p>
	<table class="table table-bordered table-striped">
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Image)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Category.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Price)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ShopierId)
			</th>
			<th style="width: 200px;"></th>
		</tr>

		@foreach (var item in Model)
		{
			<tr>
				<td>
					<img src="/theme/img/@item.Image" width="100" height="70"/>
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Category.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Price)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ShopierId)
				</td>
				<td>
					@Html.ActionLink("Güncelle", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })
					@Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
					@Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
				</td>
			</tr>
		}

	</table>
</div>